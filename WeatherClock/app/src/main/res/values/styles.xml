<resources>

    <!-- Base application theme. -->
    <!-- Activity主题 -->
    <style name="Transparent.holo" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <!-- AppCompat主题 -->
    <style name="Transparent.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <!-- AppCompat亮色主题 -->
    <style name="Transparent" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="Theme.MyDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
