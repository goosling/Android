<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/grey_white"/>
            <corners android:radius="@dimen/bt_corner_radius"/>
            <padding android:bottom="@dimen/bt_padding_top" android:left="@dimen/bt_padding_left" android:right="@dimen/bt_padding_left" android:top="@dimen/bt_padding_top"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/brown"/>
            <corners android:radius="@dimen/bt_corner_radius" />
            <padding android:bottom="@dimen/bt_padding_top" android:left="@dimen/bt_padding_left" android:right="@dimen/bt_padding_left" android:top="@dimen/bt_padding_top" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/themeYellow" />
            <!--  <stroke android:width="1dp" android:color="@color/mytheme_color" /> -->
            <corners android:radius="@dimen/bt_corner_radius" />
            <padding android:bottom="@dimen/bt_padding_top" android:left="@dimen/bt_padding_left" android:right="@dimen/bt_padding_left" android:top="@dimen/bt_padding_top" />
        </shape>
    </item>
</selector>